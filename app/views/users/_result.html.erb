<div class="col-md-12" style="display: inline-block;">
  <% if params[:action] == 'search' %>
  <%= bootstrap_flash %>
  <% end %>
</div>
<% if @stock %>
<div class="well results-block col-md-12" style="display: inline-block;">
  <strong>Symbol: </strong> <%= @stock.ticker %>
  <strong>Name: </strong> <%= @stock.name %>
  <strong>Price: </strong> <%= @stock.last_price %>
  <%= link_to "Add to my Stack", user_stocks_path(user: current_user, stock_ticker: @stock.ticker), class: "btn btn-xs btn-success", method: :post %>
</div>
<% end %>